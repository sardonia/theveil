{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "the-veil",
  "version": "0.1.0",
  "identifier": "com.empirem2max.the-veil",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "the-veil",
        "width": 1100,
        "height": 950,
        "minWidth": 1100,
        "minHeight": 950
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/veil.gguf"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
