{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window - includes access to bundled resources",
  "windows": ["main"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    "core:menu:default",
    "core:tray:default",
    "log:default",
    "dialog:default",
    "core:fs:default",
    "fs:allow-read-binary-file",
    {
      "identifier": "fs:scope",
      "allow": ["$RESOURCE/**"]
    }
  ]
}